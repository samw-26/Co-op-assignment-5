{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@frontend/*": ["../frontend/src/*"]
		},
		"module": "CommonJS",
		"moduleResolution": "node",
		"strict": true,
		"outDir": "./built",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true
	},
	"include": [
		"src/**/*"
	],
}